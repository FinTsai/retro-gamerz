<p id="notice"><%= notice %></p>

<% if @game.image? %>
  <%= image_tag(@game.image, size: "150x150", :alt => @game.name) %>
<% end %>

<p>
  <strong>Name:</strong>
  <%= @game.name %>
</p>

<p>
  <strong>Price:</strong>
  <%= @game.price %>
</p>

<p>
  <strong>Available:</strong>
  <%= @game.available %>
</p>


<%= link_to 'Edit', edit_game_path(@game) %> |
<%= link_to 'Back', games_path %>
